
<section >
    <div class="containers">
        <div class="row align-items-center ">
            <div class="col-sm-6 text-black ">

      
              <div class="d-flex justify-content-center align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">                     
                        <form style="width: 23rem" action="/auth/signup" method="POST">
                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Registro de usuario</h3>
                              
                            <div class="form-outline mb-4">
                                <label for="email" class="form-label">Email de usuario</label>
                                <input type="email" class="form-control form-control-lg" id="email" name="email">
                            </div>
                        
                            <div class="form-outline mb-4">
                                <label for="password" class="form-label">Contraseña</label>
                                <input type="password" class="form-control form-control-lg"  id="password" name="password">
                            </div>

                            <div class="pt-1 mb-4">
                                <button type="submit" class="btn btn-dark bg-success btn-block">Registrarme</button><br><br>
                                {{#if errorMsg}}
                                <p id="errorMessage">{{errorMsg}}</p>
                                {{/if}}
                                <p>¿Ya estás registrad@? <a href="/auth/login">Inicia sesión</a>.</p>
                            </div>

                        </form>
              </div>  
           </div>                    
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="../images/background-travel.jpg" alt="" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>       
        </div>        
    </div>
 
</section>



